 public static void main(String[] args) {


        List<String> shoppingList = new ArrayList<>();



        boolean addMoreFood;
        do {

            Scanner sc = new Scanner(System.in);


            String s = sc.nextLine();

            String food = null;
            addFoodFunction(sc,shoppingList, food);


            addMoreFood = addMoreFoodOption(s, shoppingList, food);


        } while (addMoreFood);




    }

    public static void optionMessage() {

        System.out.println("\n1. Type 'add' to add item" +
                "\n2. Type 'remove' to remove an item. " +
                "\n3. Type 'list' to display shopping list and exit  ");


    }

    public static boolean addMoreFoodOption(String s, List shoppingList, String food) {

        boolean addMoreFood;
        if (s.equalsIgnoreCase("add")) {
            addMoreFood = true;


        } else if (s.equalsIgnoreCase("remove")) {

            shoppingList.remove(food);
            System.out.println(food + " removed from the shopping list");
            addMoreFood = true;

        } else {
            System.out.println("This is your shopping list: " + shoppingList);
            addMoreFood = false;


        }
        return addMoreFood;
    }
    public static void  addFoodFunction(Scanner sc, List shoppingList, String food ){
        System.out.print("Add something to the shopping list: ");
        food = sc.nextLine();
        shoppingList.add(food);
        System.out.println(food + " added to the shopping list");
    }
}